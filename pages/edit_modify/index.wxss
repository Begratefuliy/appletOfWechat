page {
  background-color: #edece8;
}
button {
  background-color: var(--themeColor);
  color: #fff;
  margin: 50rpx;
}
.container {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  margin-top: 50rpx;
}
.container ._common {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  margin-bottom: 10px;
  border-radius: 10rpx;
}
.container ._common .word {
  display: inline-block;
  margin-left: 10rpx;
  color: #5c5b5b;
  font-size: 30rpx;
}
.container ._common input {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 170rpx;
  display: inline-block;
  width: 74%;
  height: 80rpx;
  font-size: 30rpx;
  color: #444444;
}
.container .red {
  color: red;
  margin: 0 10rpx;
}
