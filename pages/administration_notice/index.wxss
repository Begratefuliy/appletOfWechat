button {
  background-color: var(--themeColor);
  color: #fff;
  margin: 50rpx 0;
}
.container {
  overflow: hidden;
}
.container .title {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: 700;
}
.container .common {
  position: relative;
  width: 100%;
  height: 340rpx;
}
.container .common text {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: 700;
}
.container .common textarea {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 250rpx;
  border: 1rpx dashed #999;
  font-size: 35rpx;
}
