@import "../../style/iconfont.wxss";
.left{
    float: left;
}
.right{
    float: right;
}
.clearfix{
    content: "";
    display: inline-block;
    clear: both;
}
.box1{
    height: 200rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 28rpx;
    line-height: 2rem;
    border-bottom: 10rpx solid rgba(248, 247, 252);
}
.pinglun{
    position: relative;
    height: 100rpx;
    width: 150rpx;
    text-align: center;
}
.pic1{
    color: white;
    background-color: rgba(59,215,168);
    height: 80rpx;
    width: 80rpx;
    margin: 0 auto;
    border-radius: 50%;
    line-height: 80rpx;
}
.dianzan{
    position: relative;
    height: 100rpx;
    width: 150rpx;
    text-align: center;
}
.pic2{
    color: white;
    background-color: rgba(253,70,92);
    height: 80rpx;
    width: 80rpx;
    margin: 0 auto;
    border-radius: 50%;
    line-height: 80rpx;
}
.message{
    position: relative;
    width: 100%;
    height: 150rpx;
    line-height: 150rpx;
    border-bottom: 2rpx solid rgba(248, 247, 252);
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: gray;
}
.avatar{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    border: 1rpx solid #999;
}
.user-message{
    position: absolute;
    top: 20rpx;
    left: 130rpx;
    position: absolute;
    line-height: 20rpx;
    width: 70%;
    margin-left: 30rpx;
}
.user-message .name{
    color: black;
    font-weight: bolder;
    font-size: 35rpx;
}
.user-message .time{
    position: absolute;
    right: 5rpx;
    top: 0rpx;
}
.user-message .particulars{
    width: 100%;
    line-height: 100rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
