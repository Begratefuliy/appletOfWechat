page {
  position: relative;
  background-color: #edece8;
}
.content {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
}
.content .common {
  position: relative;
  width: 100%;
  height: 200rpx;
  border: 1px solid #999;
  background-color: #fff;
  margin: 50rpx 0;
  border-radius: 20rpx;
}
.content .common .icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40rpx;
  display: inline-block;
}
.content .common .icon image {
  width: 150rpx;
  height: 150rpx;
}
.content .common text {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40%;
  font-size: 40rpx;
  color: #5f5f5f;
}
.content .word {
  text-align: center;
}
.content .word text {
  color: #999;
}
